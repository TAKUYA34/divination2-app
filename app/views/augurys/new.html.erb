
<%= form_with model: @augury, url: augurys_path, local: true do |f| %>
<%= render "error_messages", model: f.object %>
<div class="form-wp">
  <div class="form-header">
    <h3 class="form-header-text">
      投稿する 
    </h3>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">nickname</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:"例) 山本太郎", maxlength:"40" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">星座</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :sign, class:"input-default", id:"sign", placeholder:"例) 蟹座", maxlength:"10" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :birth_id,
                    class:'select-birth',
                    id:"birth_id",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>
      <%= f.submit "占ってみる", class:"register-btn" %>
    <% end %>
</div>
