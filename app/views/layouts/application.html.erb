<!DOCTYPE html>
<html>
  <head>
    <title>DivinationApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="heading">
        <h1 class="title"><a href="/">Divination App</a></h1>
      </div>
      <div class="navbar">
        <% if user_signed_in? %>
          <div class="nav-list">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-new" %>
          </div>
        <% else %>
          <div class="nav-list">
            <%= link_to "新規登録", new_user_registration_path, class: "nav-new" %>
            <%= link_to "ログイン", new_user_session_path, class: "nav-login" %>
          </div>
        <% end %>
      </div>
    </header>
    <%= yield %>
    <footer>
      <footer class="footer">
        <p class="copyright">Copyright © DIVINATION APP All rights reserved.</p>
      </footer>
    </footer>
  </body>
</html>
